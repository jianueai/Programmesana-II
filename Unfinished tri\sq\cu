import math
class RightTriangle:
    def __init__(self,s1,s2,s3):
        self.side1 = s1
        self.side2 = s2
        self.side3 = s3
    def areaCalc(self,s1,s2):
        print("Area is " + str((s1*s2)/2))
    def Perimeter(self,s1,s2,s3):
        print("Perimeter is " + str(s1+s2+s3))
                 
s1 = 3 
s2 = 4
s3 = math.sqrt(s1^2+s2^2)

tri = RightTriangle(s1,s2,s3)
tri.areaCalc(s1,s2)
tri.Perimeter(s1,s2,s3)      
